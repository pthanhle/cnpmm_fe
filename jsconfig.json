{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@api/*": [
                "src/api/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@features/*": [
                "src/features/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@constants/*": [
                "src/constants/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}